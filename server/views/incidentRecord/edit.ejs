<%-include ../partials/header.ejs%> <%-include ../partials/main_nav.ejs%>
<!--Content for the Add Page-->
<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1><%=title%></h1>
      <form method="post" action="/contact/edit/<%= contact._id %>">
        <div class="form-group">
          <label for="recordNumber">Record Number:</label>
          <input
            type="text"
            class="form-control"
            id="recordNumber"
            name="recordNumber"
            pattern="[\d]{6}-[\d]{7}"
            required
            value=""
          />
        </div>
        <div class="form-group">
          <label for="incidentNarrative">Incident Narrative:</label>
          <input
            class="form-control"
            id="incidentNarrative"
            name="incidentNarrative"
            type="time"
            step="1"
            required
            value=""
          />
        </div>
        <div class="form-group">
          <label for="status">Status:</label>
          <input
            type="text"
            class="form-control"
            id="status"
            name="status"
            type="tel"
            required
            value="NEW"
          />
        </div>
        <div class="row">
          <div class="col-md-6">
            <button type="submit" class="btn btn-primary">Save</button>
          </div>
        </div>
        <div class="row mt-3">
          <div class="col-md-12 text-right">
            <a href="/dashboard" class="btn btn-secondary">Cancel</a>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<%-include ../partials/bottom_nav.ejs%> <%-include ../partials/footer.ejs%>
