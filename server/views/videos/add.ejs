<!--Content for the Add Page-->
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="video-form">
                <div id="video" class="box-shadow-full">
                    <div class="col-md-6">
                        <h1><%=title%></h1>
                        <form class="form" method="POST">
                            <div class="form-group mt-3">
                                <label for="nameTextField">Title</label>
                                <input type="text" class="form-control"
                                id="nameTextField"
                                placeholder = "Enter the video's title"
                                name="name" required>
                            </div>

                            <div class="form-group mt-3">
                                <label for="videoTextField">Vidoe URL</label>
                                <input type="text" class="form-control"
                                id="videoTextField"
                                placeholder = "Enter the video's url"
                                name="videoLink" required>
                            </div>
                            
                            <div class="form-group mt-3">
                                <label for="notesTextField">Notes</label>
                                <input type="text" class="form-control"
                                id="notesTextField"
                                placeholder = "Enter the notes for the video"
                                name="notes" required>
                            </div>

                            <div class="mt-3">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-edit"></i>submit
                                </button>
                                <a href="/videos" class="btn btn-warning">
                                    <i class="fas fa-undo"></i>cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>  
    </div>
</div>
