<!--Content for the Add Page-->
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="video-form">
                <div id="video" class="box-shadow-full">
                    <div class="col-md-6">
                        <h1><%=title%></h1>
                        <form class="form" method="POST">
                            <div class="form-group mt-3">
                                <label for="videoTextField">Video's Title</label>
                                <input type="text" class="form-control"
                                id="videoTextField"
                                placeholder = "Enter the video's name"
                                name="name" 
                                value="<%=video.name%>"
                                required>
                            </div>

                            <div class="form-group mt-3">
                                <label for="videoTextField">Vidoe URL</label>
                                <input type="text" class="form-control"
                                id="videoTextField"
                                placeholder = "Enter the video's url"
                                name="videoLink"
                                value="<%=video.videoLink%>"
                                required>
                            </div>
                            
                            <div class="form-group mt-3">
                                <label for="notesTextField">Notes</label>
                                <input type="text" class="form-control"
                                id="notesTextField"
                                placeholder = "Enter the video notes"
                                name="notes" 
                                value="<%=video.notes%>"
                                required>
                            </div>

                            <div class="form-group mt-3">
                                <label for="statusSelectField">Status</label>
                                <select name="syncStatus" id="statusSelectField">
                                    <option value="true" 
                                        <%= video.syncStatus === 1 ? 'selected' : '' %>>
                                        True
                                    </option>
                                    <option value="false" 
                                        <%= video.syncStatus === 0 ? 'selected' : '' %>>
                                        False
                                    </option>
                                </select>

                            </div>

                            <div class="form-group mt-3">
                                <label for="predictTextField">predictResult</label>
                                <input type="text" class="form-control"
                                id="predictTextField"
                                placeholder = "Show the predict result of the comments"
                                name="predictResult" 
                                value="<%=video.predictResult%>"
                                disabled>
                            </div>

                            <div class="form-group mt-3">
                                <label for="commentsTextField">Comments</label>
                                <input type="text" class="form-control"
                                id="commentsTextField"
                                placeholder = "Show the comments for the video"
                                name="comments" 
                                value="<%=video.comments%>"
                                disabled>
                            </div>

                            <div class="mt-3">
                                <button class="btn btn-primary" type="submit"><i class="fas fa-edit"></i>submit</button>
                                <a href="/videos" class="btn btn-warning"><i class="fas fa-undo"></i>cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%-include ../partials/bottom_nav.ejs%> <%-include ../partials/footer.ejs%>

<style>
    .fullbox {
      height: 100%;
    }
    .contact-form {
      margin-top: 4rem;
    }
    .box-shadow-full {
        display: flex;
        justify-content: center;
    }
</style>